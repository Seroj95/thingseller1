<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginTop">46dp</item>
        <item name="android:background">@null</item>
        <item name="android:colorControlNormal">#9CA5B2</item>
        <item name="colorControlActivated">@color/appHighLightColor</item>
        <item name="colorControlHighlight">@color/appHighLightColor</item>
    </style>

 <style name="InputLayoutStyle_1" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@null</item>
        <item name="android:colorControlNormal">#9CA5B2</item>
        <item name="colorControlActivated">@color/appHighLightColor</item>
        <item name="colorControlHighlight">@color/appHighLightColor</item>
    </style>

    <style name="InputTextStyle">
        <item name="backgroundColor">#0000</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">#0000</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">@color/titleTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBackgroundStyle">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/shape_app_background</item>
    </style>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">60dp</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">#FFF</item>
        <item name="iconPadding">10dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="LoginButtonStyle" parent="MainButtonStyle">
        <item name="android:background">@drawable/shape_gradient_button</item>
        <item name="background">@drawable/shape_gradient_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>
</resources>