<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sunnyschool.thingseller.ui.ForgetPasswordFragment"
    android:orientation="vertical"
    android:id="@+id/container_forgot_password"
    android:gravity="center"
   android:padding="30dp">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:contentDescription="@null"
        android:src="@drawable/t"
        android:layout_marginBottom="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Your Email Id for Reset yor Password"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_text_layout_forgot"
        style="@style/InputLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_email_address"
        app:hintTextColor="@color/appHighLightColor">

        <com.google.android.material.textfield.TextInputEditText
            android:drawableEnd="@drawable/ic_baseline_alternate_email_24"
            android:id="@+id/email_reset_password"
            style="@style/InputTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:inputType="textEmailAddress"
            android:textColor="@color/inputTextColor"
            android:selectAllOnFocus="true"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/send_email_for_reset"
        style="@style/LoginButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="Send Massage" />

    <LinearLayout
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/reset_password_Sign_In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="11sp"
            android:text="Sign In Now"
            android:textColor="@color/inputTextColor"
            android:textSize="14sp" />

        <TextView
            android:layout_marginStart="90dp"
            android:id="@+id/reset_password_Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/poppins_regular"
            android:lineSpacingExtra="11sp"
            android:text="Register Now"
            android:textColor="@color/inputTextColor"
            android:textSize="14sp" />
    </LinearLayout>




</LinearLayout>